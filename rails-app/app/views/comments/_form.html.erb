<%= form_with(model: [post, comment], id: "comment-form") do |form| %>
  <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">Add a Comment</h3>
    
    <% if comment.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <ul class="list-disc list-inside">
          <% comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="mb-3">
      <%= form.label :author, "Your Name", class: "block text-gray-700 text-sm font-medium mb-1" %>
      <%= form.text_field :author, class: "shadow-sm border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Enter your name" %>
    </div>
    
    <div class="mb-4">
      <%= form.label :content, "Comment", class: "block text-gray-700 text-sm font-medium mb-1" %>
      <%= form.text_area :content, rows: 3, class: "shadow-sm border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Write your comment..." %>
    </div>
    
    <%= form.submit "Post Comment", class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-lg transition-colors cursor-pointer" %>
  </div>
<% end %>