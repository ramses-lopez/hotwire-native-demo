<div class="max-w-4xl mx-auto">
  <%= link_to "← Back to Posts", posts_path, class: "text-blue-500 hover:text-blue-600 mb-6 inline-block" %>
  
  <article class="bg-white rounded-lg shadow-lg p-8 mb-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-4"><%= @post.title %></h1>
    <div class="text-sm text-gray-500 mb-6">
      Posted on <%= @post.created_at.strftime("%B %d, %Y at %I:%M %p") %>
    </div>
    <div class="prose prose-lg text-gray-700 mb-6">
      <%= simple_format(@post.content) %>
    </div>
    <div class="flex space-x-4 pt-6 border-t border-gray-200">
      <%= link_to "Edit", edit_post_path(@post), class: "bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded-lg transition-colors", data: { turbo_frame: "modal" } %>
      <%= button_to "Delete", @post, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
    </div>
  </article>
  
  <section class="bg-white rounded-lg shadow-lg p-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Comments</h2>
    
    <%= turbo_frame_tag "new_comment" do %>
      <%= render "comments/form", post: @post, comment: @comment %>
    <% end %>
    
    <%= turbo_stream_from @post %>
    
    <div id="comments" class="space-y-4 mt-8">
      <%= render @comments %>
    </div>
    
    <% if @comments.empty? %>
      <p class="text-gray-500 text-center py-8">No comments yet. Be the first to comment!</p>
    <% end %>
  </section>
</div>