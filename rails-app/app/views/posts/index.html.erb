<div class="max-w-4xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-800 mb-8">All Posts</h1>
  
  <div id="posts" class="space-y-6">
    <% @posts.each do |post| %>
      <%= turbo_frame_tag dom_id(post) do %>
        <article class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <h2 class="text-2xl font-semibold text-gray-800 mb-2">
            <%= link_to post.title, post, class: "hover:text-blue-600", data: { turbo_frame: "_top" } %>
          </h2>
          <div class="text-gray-600 mb-4">
            <%= truncate(post.content, length: 200) %>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-500">
              <%= post.created_at.strftime("%B %d, %Y") %>
            </span>
            <div class="space-x-2">
              <%= link_to "Read More", post, class: "text-blue-500 hover:text-blue-600 font-medium", data: { turbo_frame: "_top" } %>
              <%= link_to "Edit", edit_post_path(post), class: "text-gray-500 hover:text-gray-600", data: { turbo_frame: "modal" } %>
              <%= button_to "Delete", post, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-600 inline" %>
            </div>
          </div>
        </article>
      <% end %>
    <% end %>
  </div>
  
  <% if @posts.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-500 text-lg mb-4">No posts yet.</p>
      <%= link_to "Create your first post", new_post_path, class: "text-blue-500 hover:text-blue-600 font-medium", data: { turbo_frame: "modal" } %>
    </div>
  <% end %>
</div>